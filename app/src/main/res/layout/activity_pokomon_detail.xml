<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/text_pokomon_detail_xp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1208 PC"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_margin="@dimen/text_margin"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_margin"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@color/common_google_signin_btn_text_dark_disabled"

        >
        <ImageView
            android:id="@+id/img_pokomon_detail_current"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/pokomon_025_l"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/text_pokomon_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:text="Pikachu"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/block_evolve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/text_margin"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evolution"
            android:layout_margin="@dimen/text_margin"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/img_pokomon_detail_evolution_current"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/pokomon_025_l" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/fleches" />
            <ImageView
                android:id="@+id/img_pokomon_detail_evolution_evolve"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/pokomon_026_l"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin"
        android:padding="@dimen/text_margin"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/sword"
                />
            <TextView
                android:id="@+id/text_pokomon_detail_attack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="256"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/shield"
                />
            <TextView
                android:id="@+id/text_pokomon_detail_defense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="256"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/bolt_lighting"
                />
            <TextView
                android:id="@+id/text_pokomon_detail_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="256"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>